{
  "$schema": "http://json.schemastore.org/template", // schema which can be placed to schema validation to get the intellicence for the file
  "author": "Vitalii Honcharuk", // you can replace with your name
  "classifications": [ "WebApi", "Microservice", "MiniService" ], // used to add more info to the console output when checking installed templates
  "identity": "MiniService.Template.CSharp", // unique name
  "name": "Mini service template", // full name for the template
  "shortName": "mst", // short name for the template to simplify usage
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "Mini-Service", // value which will be replaced across the whole template to the new name provided by the user
  "preferNameDirectory": true,
  "symbols": {
    "basename": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "MiniService", // value which will be replaced across the whole template to the new name provided by the user
      "fileRename": "MiniService",
      "isRequired": true
    },
    "add-grpc": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "AddGrpc": {
      "type": "computed",
      "value": "add-grpc"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [ "./.vs/*" ]
        },
        {
          "condition": "(!grpc)",
          "exclude": [ "Grpc.MiniService/**/*", "Mini-Service/MiniService/Features/Todos/TodosService.cs", "Mini-Service/MiniService/Protos/*" ]
        }
      ]
    }
  ]
}
